{
    "name": "generatepdfs/php-sdk",
    "description": "PHP SDK for GeneratePDFs.com API",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "pdf",
        "generate",
        "api",
        "sdk"
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.0",
        "phpstan/phpstan": "^1.10",
        "mockery/mockery": "^1.6",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "GeneratePDFs\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GeneratePDFs\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpcs --standard=PSR12 src",
            "./vendor/bin/pest"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
